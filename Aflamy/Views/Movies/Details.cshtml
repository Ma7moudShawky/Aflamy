@model Aflamy.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Poster)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieCategries)
        </dt>
        <dd class="col-sm-10">
            @foreach (Category category in Model.MovieCategries)
            {
                <ul>
                    <li>
                        @category.CategoryName
                    </li>
                </ul>
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.MovieID">Edit</a> |
    <a asp-action="List" class="btn btn-primary">Back to List</a>
</div>
